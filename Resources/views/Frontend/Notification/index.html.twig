{% extends 'OdiseoNotificationBundle:Frontend:layout.html.twig' %}

{% block content %}
<section id="general">
</section>

<div class="container margin_30">
    <div class="row">
        <div class="col-md-12">
            <h2>{{ 'odiseo.notification.notifications'|trans }}</h2>
            <hr>

            <div class="notifications">
                <ul>
                    {% for notification in notifications %}
                    <li>
                        {% if notification.link %}
                        <a href="{{ notification.link }}">
                        {% endif %}
                            <p>{{ notification.message|raw }}</p>
                            <small>{{ notification.createdAt|ago }}</small>
                        {% if notification.link %}
                        </a>
                        {% endif %}
                    </li>
                    {% endfor %}
                </ul>
            </div>

        </div>
    </div>
</div>
{% endblock %}